
<%= form_for(@aluno) do |f| %>
  <% if @aluno.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aluno.errors.count, "error") %> prohibited this aluno from being saved:</h2>

      <ul>
      <% @aluno.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="form-container">
<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Cadastro</legend>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Nome:</label>
        <%= f.text_field :nome %>
</div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Sobrenome:</label>
    <%= f.text_field :sobrenome %>
  </div>

<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Telefone:</label>
    <%= f.text_field :telefone %>
</div>

<!-- Multiple Radios -->
<div class="control-group">
  <label class="control-label" for="radios">Sexo:</label><br/>
    <%= f.radio_button :sexo,  "Feminino" %>    <%= f.label :sexo, "Feminino"  %>

    <%= f.radio_button :sexo, "Masculino", :checked => true %>    <%= f.label :sexo, "Masculino"%>

</div>

<!-- Select Basic -->
   <div class="control-group">
  <label class="control-label" for="selectbasic">Estado:</label>
  <div class="controls">
      <%= f.select :estado, brazilian_states %>
      </div>
</div>
<div class="control-group">
      <label class="control-label" for="selectbasic">Data de Nascimento:</label><br>
    <%= f.date_select :data_nas %>
  </div>
<!-- Text input-->
<div class="control-group">
  <label class="control-label" for="textinput">Cidade:</label><br>
    <%= f.text_field :cidade %>
</div>
</br>
<div class="actions">
    <%= f.submit "Salvar"%>
  </div>
</fieldset>
</form>
<% end %>
</div>